{
  "name": "@foil/api",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run sentry:sourcemaps",
    "dev": "concurrently \"pnpm run dev:service\" \"pnpm run dev:worker\"",
    "dev:service": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/workers/worker.ts",
    "start": "concurrently \"pnpm run start:service\" \"pnpm run start:worker\"",
    "start:service": "tsx src/server.ts",
    "start:worker": "tsx src/workers/worker.ts",
    "start:reindex-market": "tsx src/workers/worker.ts reindexMarket $*",
    "start:reindex-missing": "tsx src/workers/worker.ts reindexMissing $*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org foil --project data ./dist && sentry-cli sourcemaps upload --org foil --project data ./dist",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix && pnpm format",
    "format": "prettier --write src"
  },
  "keywords": [],
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@sentry/cli": "^2.39.0",
    "@sentry/node": "^8.40.0",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "graphql": "^16.10.0",
    "pg": "^8.13.1",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "type-graphql": "2.0.0-rc.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.2",
    "viem": "^2.21.49"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.15.0",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.21.0"
  },
  "engines": {
    "node": ">=20.14.x",
    "pnpm": "9.x"
  }
}