{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/protocol/*": ["../../protocol/*"],      
      "@/sapience/ui/*": ["../../ui/src/*"],
      "@sapience/ui": ["../../ui/src/index.ts"],
      "@sapience/ui/*": ["../../ui/src/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "commitlint.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
